<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- Propiedad para usar el nombre de la app -->
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>

    <!-- Consola con colores -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %clr([%d{HH:mm:ss.SSS}]){faint}     <!-- Hora -->
                %clr([%X{traceId:-}]){yellow}      <!-- TraceId si us√°s Sleuth -->
                %clr(%-5level){blue}               <!-- Nivel del log -->
                %clr(%logger{36}){cyan}            <!-- Clase -->
                %clr(:){faint}
                %msg %n
            </pattern>
        </encoder>
    </appender>

    <!-- Ejemplo con emojis visuales -->
    <appender name="CONSOLE_EMOJI" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %clr([%d{HH:mm:ss}]){faint}
                %highlight(%-5level){
                FATAL=üî¥,
                ERROR=‚ùå,
                WARN=‚ö†Ô∏è,
                INFO=‚úÖ,
                DEBUG=üêû,
                TRACE=üîç
                }
                %clr(%logger{20}){cyan} - %msg %n
            </pattern>
        </encoder>
    </appender>

    <!-- Nivel por defecto -->
    <root level="info">
        <appender-ref ref="CONSOLE_EMOJI"/>
    </root>

    <!-- Si quer√©s DEBUG solo para un paquete espec√≠fico -->
    <logger name="com.tuempresa.tuprojecto" level="debug"/>
</configuration>
